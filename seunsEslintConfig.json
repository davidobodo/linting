{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "prefer-object-spread",
        "cypress"
    ],
    "rules": {
        "arrow-spacing": "warn",
        "brace-style": "warn",
        "comma-dangle": "off",
        "curly": "error",
        "eqeqeq": [
            "error",
            "smart"
        ],
        "key-spacing": "error",
        "keyword-spacing": "warn",
        "max-len": [
            "warn",
            {
                "ignoreStrings": true,
                "ignoreComments": true
            }
        ],
        "prefer-const": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-console": "off",
        "no-constant-condition": "off",
        "no-eq-null": "warn",
        "no-prototype-builtins": "warn",
        "no-restricted-globals": [
            "error",
            "event",
            "name",
            "context"
        ],
        "no-restricted-syntax": [
            "error",
            "ForOfStatement"
        ],
        "prefer-object-spread/prefer-object-spread": "error",
        "no-var": "warn",
        "object-shorthand": "warn",
        "prettier/prettier": "warn",
        "require-atomic-updates": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "semi": "error",
        "space-before-blocks": [
            "warn",
            "always"
        ]
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "cypress/globals": true
    }
}